{% macro print_sponsors() %}
<p style="text-align:center;">
{%- for sponsor in sponsors -%}
<a href="
{%-
    if "{{sponsors[sponsor[0]]['website'][resource.meta.language]}}" != ""
-%}
    {{sponsors[sponsor[0]]['website'][resource.meta.language]}}
{%- else -%}
    {{sponsors[sponsor[0]]['website']}}
{%-
    endif
-%}
"><img src="/media/img/sponsors/
{%-
    if "{{sponsors[sponsor[0]]['image'][resource.meta.language]}}" != ""
-%}
    {{sponsors[sponsor[0]]['image'][resource.meta.language]}}
{%- else -%}
    {{sponsors[sponsor[0]]['image']}}
{%-
    endif
-%}
" alt="
{%-
    if "{{sponsors[sponsor[0]]['name'][resource.meta.language]}}" != ""
-%}
    {{sponsors[sponsor[0]]['name'][resource.meta.language]}}
{%- else -%}
    {{sponsors[sponsor[0]]['name']}}
{%-
    endif
-%}
" /></a>
{%- endfor -%}
</p>
{% endmacro %}
